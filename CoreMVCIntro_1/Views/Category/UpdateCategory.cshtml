@model CategoryVM
@{
    ViewData["Title"] = "UpdateCategory";
}











<form asp-action="UpdateCategory" asp-controller="Category" method="post">
    <input type="hidden" asp-for="Category.ID" />


    <div>
        <input type="text" asp-for="Category.CategoryName" placeholder="Lütfen kategori ismi giriniz" />
    </div>

    <div>
        <input type="text" asp-for="Category.Description" placeholder="Lütfen acıklama giriniz" />
    </div>



    @*@Html.TextBoxFor(x => x.Category.Description, new { placeholder = "Lütfen acıklama giriniz" })*@



    <button class="btn btn-primary">
        Güncelle
    </button>
</form>



